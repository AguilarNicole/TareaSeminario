doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/empleados.css")
        link(rel="stylesheet", href="bootstrap/bootstrap.min.css")
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" data-auto-replace-svg="nest"></script>
        title Registro Departamentos
    body 


    //INGRESAR EMPELADOS
    div
        form(action="/departamento" method="post")
            label(for='nombre_departamento') Nombre Departamento
            input#nombre_departamento(type='text' name='nombre_departamento' placeholder=' nombre_departamento ' required="required")
            label(for='descripcion_departamento') Descripcion Departamento
            input#descripcion_departamento(type='text' name='descripcion_departamento' placeholder=' descripcion_departamento ' required="required")
            input(type='submit' value='Registrar')
            a.fas.fa-home.fa-5x(href='/')
            div
                

    .container
        table.table.table-striped
            thead
                tr
                    th ID
                    th Nombre-Departamento
                    th Descripcion-Departamento
                tbody
                    if departamentos.length 
                        each d in departamentos 
                            tr  
                                td #{d.id_dep}
                                td #{d.nombre_departamento}
                                td #{d.descripcion_departamento}
                                td.text-center 

                                    button.btn(type="submit" name="id_dep" value=d.id_dep onclick="if (!confirm(`Desea eliminarlo "+ d.id_dep +"`)) return false;" ) 
                                        span.i.far.fa-calendar-times
                                    button.btn(type="submit" name="id_dep" value=d.id_dep) 
                                        span.i.far.fa-edit