doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/empleados.css")
        link(rel="stylesheet", href="bootstrap/bootstrap.min.css")
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" data-auto-replace-svg="nest"></script>
        title Registro Empleados
    body 


    //INGRESAR EMPELADOS
    div
        form(action="/Empleado" method="post")
            label(for='nombre_empleado') Nombre
            input#nombre_empleado(type='text' name='nombre_empleado' placeholder='Nombre Apellido ' required="required")
            label(for='telefono') Telefono
            input#telefono_empleado(type='text' name='telefono_empleado' placeholder=' Telefono ' required="required")
            label(for='correo') Correo 
            input#correo_empleado(type='text' name='correo_empleado' placeholder=' Correo Electronico ' required="required")
            label(for='direccion') Direccion
            input#direccion_empleado(type='text' name='direccion_empleado' placeholder=' Direccion ' required="required")
            label(for='edad') Edad
            input#edad_empleado(type='text' name='edad_empleado' placeholder=' Edad ' required="required")
            label(for='id_dep') Departamentos
            select#id_dep(name='id_dep')
                each d in departamentos
                    option(value=d.id_dep) #{d.nombre_departamento}

            input(type='submit' value='Registrar')
            a.fas.fa-home.fa-5x(href='/') 
    
div

br
br
br
form(action="/borrarEmpleado" method="post")
        .form-group.mt-3
            label.fw-bold(for="id_emp") Busqueda
                input.form-control.agregar(type='number' placeholder='Id del Empleado' name="id_emp" required)
        .form-check.mt-3
                button.agregar.btn.btn-lg.btn-primary(type="submit") Eliminar



        .container
            table.table.table-striped 
                thead
                    tr
                        th ID
                        th Nombre-Empleado
                        th Telefono-Empleado
                        th Correo-Empleado
                        th Direccion-Empleado
                        th Edad-Empleado
                        th Departamentos

                    tbody
                        if empleado.length 
                            each e in empleado 
                                tr  
                                    td #{e.id_emp}
                                    td #{e.nombre_empleado}
                                    td #{e.telefono_empleado}
                                    td #{e.correo_empleado}
                                    td #{e.direccion_empleado}
                                    td #{e.edad_empleado}
                                    td #{e.id_dep}
                                    td.text-center 
